.expert {
  padding: 60px 0;

  &__wrapper{
    display: flex;
    justify-content: space-between;
    background: url(../../img/ico_fon.png) left bottom/contain no-repeat;
  }
  &__img {
    margin-right: 50px;
  }
  &__content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    line-height: 1.5;
  }
  &__title {
    font-weight: 600;
    color: var(--color-violet);
    margin-bottom: 25px;
  }
  &__text{
    font-weight: 400;
  }
}